{
  "graph": {
    "train_width": 256,
    "test_width": 2000
  },
  "model": {
    "max_nodes": 128,
    "max_neighbors": 32,
    "embed_size": 50,
    "hidden_size": 100,
    "topk": 5,
    "reward_policy": "direct"
  },
  "optimizer": {
    "name": "Adam",
    "embed": {
      "lr": 1e-5
    },
    "summary": {
      "lr": 1e-5
    },
    "agent": {
      "lr": 1e-4
    },
    "config": {
      "weight_decay": 1e-4
    }
  },
  "pretrain_optimizer": {
    "lr": 0.0001
  },
  "trainer": {
    "weighted_sample": true,
    "ignore_relation": false
  },
  "train": {
    "batch_size": 32,
    "log_interval": 1000,
    "evaluate_interval": 5000
  },
  "pretrain": {
    "batch_size": 128,
    "keep_embed" : true,
    "log_interval": 1000,
    "evaluate_interval": 20000
  }
}
